h2
  = t('.sign_up')
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    .mb-3
      = f.input :email, required: true, autofocus: true, input_html: { autocomplete: 'email' }
    .mb-3
      = f.input :password, required: true,
        hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
        input_html: { autocomplete: 'new-password' }
    .mb-3
      = f.input :password_confirmation, required: true, input_html: { autocomplete: 'new-password' }
    .mb-2
      = recaptcha_tags
      - if f(:recaptcha_error, discard: true)
        .small.text-danger
          = f(:recaptcha_error, discard: true)
  .form-actions.mb-3
    = f.button :submit, t('.sign_up'), class: 'btn-primary'
= render 'devise/shared/links'
