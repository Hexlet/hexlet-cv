- content_for :header do
  = t('.career_path')
.d-flex
  .mb-3.me-2
    = link_to t('.back'), url_for(:back), class: 'btn btn-outline-secondary'
  - if @career_member
    .md-3
      = link_to t('.start'), career_member_path(@career.slug, @career_member), class: 'btn btn-primary'

.row.mb-3
  .col-sm-3
    b = han('career', 'name')
  .col-sm-9
    = @career.name

.row.mb-3
  .col-sm-3
    b = han('career', 'description')
  .col-sm-9.hexlet-cv-content
    == markdown2html @career.description
