  p = t('.description')

  h2 = t('.where_find_jobs')

  ul
    li hh.ru
    li career.habr.ru
    li https://cv.hexlet.io/vacancies

  h2 = t('.seasonality')

  p = t('.seasonality_description')

  h2 = t('.check_list')

  ol
    li = t('.check_list_steps.free_course')
    li = t('.check_list_steps.cv')
    li = t('.check_list_steps.habr')
    li = t('.check_list_steps.opensourse')
    li = t('.check_list_steps.linkedin')
